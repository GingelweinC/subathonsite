{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/images/(.*)",
        "dest": "/public/images/$1"
      },
      {
        "src": "/api/abonnements",
        "dest": "/api/abonnements.js"
      },
      {
        "src": "/api/donation",
        "dest": "/api/donation.js"
      },
      {
        "src": "/api/getFirebaseConfig",
        "dest": "/api/getFirebaseConfig.js"
      },
      {
        "src": "/api/eventsub",
        "dest": "/api/eventsub.js"
      },
      {
        "src": "/api/refreshToken",
        "dest": "/api/refreshToken.js"
      },
      {
        "src": "/(.*)",
        "status": 404
      }
    ],
    "crons": [
      {
        "path": "/api/abonnements",
        "schedule": "0 0 1 * *"
      }
    ]
  }
